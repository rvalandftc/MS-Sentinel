{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspace": {
            "type": "String"
        }
    },
    "resources": [
        {
            "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/947a4d2d-75bf-4cf8-a7f8-87152a9e08e5')]",
            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/947a4d2d-75bf-4cf8-a7f8-87152a9e08e5')]",
            "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
            "kind": "Scheduled",
            "apiVersion": "2022-10-01-preview",
            "properties": {
                "displayName": "Entra - A change was made to named locations",
                "description": "Named locations created/deleted or modified.",
                "severity": "Medium",
                "enabled": true,
                "query": "AuditLogs\r\n| where Category == \"Policy\"\r\n| where ActivityDisplayName == \"Add named location\"\r\n    or ActivityDisplayName == \"Delete named location\"\r\n    or ActivityDisplayName == \"Update named location\"\r\n| where Result =~ \"success\"\r\n| mv-expand TargetResources\r\n| extend Target = tostring(TargetResources.displayName)\r\n| mv-expand InitiatedBy\r\n| extend InitiatedByUPN = tostring(InitiatedBy.user.userPrincipalName)\r\n| project TimeGenerated, Target, InitiatedByUPN, ActivityDisplayName, TargetResources.modifiedProperties",
                "queryFrequency": "P1D",
                "queryPeriod": "P1D",
                "triggerOperator": "GreaterThan",
                "triggerThreshold": 0,
                "suppressionDuration": "PT5H",
                "suppressionEnabled": false,
                "tactics": [
                    "DefenseEvasion"
                ],
                "techniques": [],
                "alertRuleTemplateName": null,
                "incidentConfiguration": {
                    "createIncident": true,
                    "groupingConfiguration": {
                        "enabled": false,
                        "reopenClosedIncident": false,
                        "lookbackDuration": "PT5H",
                        "matchingMethod": "AllEntities",
                        "groupByEntities": [],
                        "groupByAlertDetails": [],
                        "groupByCustomDetails": []
                    }
                },
                "eventGroupingSettings": {
                    "aggregationKind": "SingleAlert"
                },
                "alertDetailsOverride": null,
                "customDetails": null,
                "entityMappings": null,
                "sentinelEntitiesMappings": null
            }
        }
    ]
}
